<tr id="<%= "sub_task_id_#{sub_task.id}" %>" class="<%= sub_task.finished == true ? 'odd' : 'even' %>">
  <td class= 'check'>
    <%= simple_form_for sub_task, remote: true do |f| %>
      <%= f.input_field :finished, as: :boolean  %>
      <%= f.hidden_field :task_id, value: params[:task_id] %>
    <% end %>
  </td>
  <td><%= sub_task.description %></td>
  <td>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      sub_task_path(sub_task),
      :method => :delete,
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, remote: true,
      :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>
